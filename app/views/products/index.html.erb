<p id="notice"><%= notice %></p>

<h2>Products</h2>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:'btn btn-default' %>

<br>
<hr>

<div class="row">

  <div class="col-lg-6">
    <div class="well">                
      <legend><h3>New Product</h3></legend>
      <%= render 'form' %>
    </div>
    <div class="well">
      <%= form_for :evento, :url => evento_path do |f| %>
        <legend><h3>New Event Two</h3></legend>
        <div class="form-group">
          <%= f.label :evento, class: 'control-label' %>
          <%= f.text_field :evento, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "Guardar", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>  

  <div class="col-lg-6">
    <div class="well">
      <legend><h3>New Category</h3></legend>
      <%= form_for(:details, url: { controller: "products", action: "details" }, html: {class:'form-horizontal'}) do |f| %>
        <div class="form-group">
          <%= f.label :categoria, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :categoria, class: 'form-control' %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Guardar", class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>

    <div class="well">
      <%= form_for :hola, :url => { :action => "say_hola" } do |f| %>
        <legend><h3>New Event</h3></legend>
        <div class="form-group">
          <%= f.label :evento, class: 'control-label' %>
          <%= f.text_field :evento, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "Guardar", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>

</div>

